@import '../../../../../styling/utils'

.auto-channel-setting
	.header-button-bar
		margin-bottom: 22px

	.ant-table-small > .ant-table-content > .ant-table-body > table > .ant-table-tbody > tr > td
		padding: 19px 8px

	&__popover--black-list
		width: 120px

		.ant-popover-title,
		&-item
			font-size: 12px

		.ant-popover-title
			padding: 5px 9px 4px
			min-height: 100%
			min-width: 100%

		.ant-popover-inner-content
			padding: 5px 9px

		&-item
			margin-bottom: 0

	.with-ellipsis
		ellipsis(70px)
		color: #228dff

.auto-channel-modal
	&__notice-text
		color: rgba(255, 36, 36, .85)
		padding-left: 63px
		height: 22px

	.ant-input-number.has-error
		border-color: rgba(255, 36, 36, .85)
