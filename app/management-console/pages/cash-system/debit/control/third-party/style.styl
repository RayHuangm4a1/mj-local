.debit-control-third-party
	.page-block__content
		padding: 0
		
	.third-party-search-form
		&__form-item
			display: flex
			margin-bottom: 20px

			&--middle
				.ant-form-item-label
					width: 98px
			&--right
				float: right

		&__input
			min-width: 200px

	&__add-button
		text-align: right
		margin: 32px 0px 16px

.third-party-modal
	&__form-item
		margin-bottom: 12px

	&__input, &__input.ant-select
		width: 397px

	&__level-group
		width: 510px
		.ant-checkbox-wrapper
			width: 102px
			margin: 9px 0px 9px
