		margin-bottom: 24px

	.ant-table-small > .ant-table-content > .ant-table-body > table > .ant-table-tbody > tr > td
		padding: 16px 8px

	&__popover-overlay
		width: 167px
		font-size: 12px

		.ant-popover
			&-title
				color: rgba(0, 0, 0, .65);
				padding: 6px 15px
				min-height: 100%
				min-width: 100%

			&-inner-content
				padding: 6px 15px 8px

				span
					margin-right: 5px

.preset-maintain-editing-modal
