.cashflow-count
	&__formitem-inline
		display: inline-flex
	&-result
		&__header
			display: flex
		&__selector
			width: 180px
			margin-left: 24px
		&__cards
			display: flex
			justify-content: flex-start
			margin: 30px 0
			.ant-card
				width: calc((100% - 30px) / 3)
				margin-right: 15px
				&:last-child
					margin-right: 0
			.ant-statistic-content
				display: flex
				align-items: center
			.ant-statistic-content-prefix
				color: #5cb0ff
				font-size: 20px
	.ant-radio-group
		margin-top: 8px
