.lottery-setting
	&__header
		margin-bottom: 27px
		.ljit-form
			> div
				&:first-child
					display: flex
					justify-content: space-between
					align-items: center
				&:last-child
					.ant-form-item
						margin-bottom: 0px
					.ant-btn
						padding: 5px 18px
						margin: 0
						&:first-child
							margin-right: 24px
			&-label
				display: flex
				margin-bottom: 12px
				.ant-form-item-control-wrapper
					width: 264px

	&__tooltip-auto-close-lottery
		display: inline-block
		margin-left: 7px
		width: 16px
		height: 16px
		line-height: 1
		vertical-align: text-bottom

	&__tooltip-auto-close-lottery-overlay
		width: 220px

		.ant-tooltip-inner
			padding: 8px 12px
