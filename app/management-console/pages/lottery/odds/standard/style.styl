.lottery-odds-standard
	.prize-number-percent
		margin-left: 18px
		width: 60px
		&--nagetive
			color: #448224
		&--positive
			color: #f5222d

	&__info
		.page-block__content
			> .header-button-bar
				padding-bottom: 20px
				border-bottom: 1px solid #e8e8e8
		&-select
			display: flex
			margin: 0px
			.ljit-form-select
				width: 160px
		&-tab
			margin-top: 32px
		.ant-tabs-bar
			padding-top: 4px
		.ant-tabs
			.ant-tabs-left-content
				border-bottom: 1px solid #e8e8e8
	&__form
		margin-bottom: 24px
		.ljit-form
			position: relative
			> div
				&:first-child
					display: grid
					grid-template-columns: repeat(3, 1fr)
				&:last-child
					text-align: right
					.ljit-btn
						padding: 5px 18px
						&:first-child
							margin-right: 16px
			&-label
				display: flex
				margin-bottom: 12px
				width: 100%
				justify-content: flex-end
				.ant-col:first-child
					width: 56px
				.ant-form-item-control-wrapper
					min-width: 220px
					width: 80%
	&__edit-button
		width: 100%
		text-align: right
		margin-bottom: 12px
		.ljit-btn
			padding: 5px 26px
	&__page-modal
		.ant-form-item
			margin-bottom: 0
		.ant-form-item-children
			.ant-input-number.ljit-input-number
				width: 120px
	&__edit-page
		>.ljit-btn
			width: 98px
			margin-bottom: 25px
		.page-block
			&__content
				padding: 30px 60px 30px 86px
			.header-button-bar
				margin-bottom: 12px
				&__pool
					&:first-child
						span
							color: #f5222d
			.ljit-btn
				width: 88px
				&:first-child
					margin-right: 22px
		&__bonus
			display: flex
			justify-content: center
			align-items: center
			.ant-input-number
				width: 120px
		.selected-hint
			background: #e6f7ff
			height: 36px
			border-radius: 4px
			border: solid 1px #1890ff
			display: flex
			align-items: center
			color: rgba(0, 0, 0, 0.65)
			margin-bottom: 16px
			&__number
				color: #1890ff
				margin: 0 5px
			> i
				margin: 0 7px 0 18px

