.management-zhaoshang-wage-rule
	padding: 8px 26px
	&__button
		border-color: #d8d8d8
		width: 98px
		height: 32px
	&__content
		div
			margin-top: 24px
			font-size: 16px
			height: 24px
			opacity: 0.85
			font-weight: 500
			color: #000
		span
			font-size: 14px
			opacity: 0.65
			height: 22px
	&__form
		.ljit-form
			margin-top: 24px
			.ant-form-item-label
				max-width: 80px
				text-align: left
			.ant-form-item-required
				font-size: 16px
				&::before
					display: none
			.ant-input-number-input
				text-align: center
			label[for="wage"]
				font-size: 14px
				font-weight: normal

.ljit-zhao-shang-wage-rule-edit
	margin-top: 24px
	.ljit-form-select
		width: 125px
