.ljit-list-item
	display: flex
	align-items: center
	justify-content: space-between
	border-bottom: 1px solid #e8e8e8
	padding: 16px 4px

	&__wrapper
		display: flex
		align-items: center

	&__title
		display: flex
		align-items: center
		color: #000
		font-weight: 500
		margin-bottom: 4px

		&-hint
			color: rgba(238, 0, 0, 0.65)
			margin-left: 10px

	&__description
		color: #646464
		opacity: 0.7
		margin-bottom: 8px
