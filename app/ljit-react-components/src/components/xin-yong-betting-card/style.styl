$xinYong-betting-card-background-color = #fff
$xinYong-betting-card-border-color = #e9e9e9

$xinYong-betting-card-title-background-color = #ffebdb
$xinYong-betting-card-title-color = #646464

.ljit-xin-yong-betting-card
	&__title
		height: 32px
		background-color: $xinYong-betting-card-title-background-color
		display: flex
		justify-content: center
		align-items: center
	&--vertical
		width: 100%
		.ljit-xin-yong-play-slot-line
			border-width: 1px 0 0 0
	&--horizontal
		width: 100%
		.ljit-xin-yong-play-slot-line
			border-width: 0 1px 1px 0
			&__ball
				width: 56px
				> div
					width: 100%
					margin-right: 0
	&__content
		background-color: $xinYong-betting-card-background-color
		border: 1px solid $xinYong-betting-card-border-color
		border-top: 0
	.xin-yong-betting-card__col--5
		width: 20%
		float: left
