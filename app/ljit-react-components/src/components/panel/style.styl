$block-width = 100%
$item-height = 32px
$border-color = #e9e9e9

.ljit-panel
	position: relative
	width: $block-width
	font-size: 14px

	&__header
		position: relative
		height: $item-height
		text-align: center
		border: 1px solid $border-color

		> div
			padding: 0px

	&__title
		display: inline-block
		line-height: $item-height
		color: #646464

	&__right
		height: $item-height
		display: flex
		justify-content: center
		position: absolute
		top: 0
		right: 0

	&__content
		height: 510px
		width: $block-width
		overflow-y: auto
		overflow-x: hidden
		background: #ffffff
		border: 1px solid $border-color
		border-top: 0px

	&__footer
		display: flex
		justify-content: center
		min-height: 32px
		width: $block-width
		text-align: center
