.ljit-checkbox
	&--circle
		.ant-checkbox-inner
			width: 20px
			height: 20px
			border-radius: 50%
			background-color: transparent
			border: 1px solid rgb(191, 191, 191)
		&.ant-checkbox-wrapper-checked
			.ant-checkbox-inner
				border-color: rgb(255, 130, 21)
				&:after
					border-bottom: 1px solid rgb(255, 130, 21)
					border-right: 1px solid rgb(255, 130, 21)
					left: 5px
					top: 8px
		&:hover
			.ant-checkbox-inner
				border-color: rgb(255, 130, 21)

		.ant-checkbox-input:focus+.ant-checkbox-inner,
		.ant-checkbox:hover.ant-checkbox-inner
			border-color: rgb(255, 130, 21)
