.ljit-dropdown-menu-bar

	&__menu
		padding: 14px 24px
		background: #ffffff
		display: grid
		grid-template-columns: 1fr 1fr 1fr
		height: 48px

		> div
			&:nth-child(1)
				justify-content: flex-start
			&:nth-child(2)
				justify-content: center
			&:nth-child(3)
				justify-content: flex-end

	&__menu-item
		cursor: pointer
		color: rgb(79, 79, 79)
		font-weight: bold
		display: flex
		align-items: center

		.ljit-icon
			transition: 0.2s
			margin-left: 8px
			color: rgb(191, 191, 191)

		&--active
			color: rgb(255, 104, 19)

			.ljit-icon
				transform: rotate(180deg)
				color: rgb(255, 104, 19)

	&__dropdown
		position: absolute
		top: 48px
		left: 0
		width: 100%
		height: 0
		overflow: hidden
		z-index: 999
		background: rgba(0, 0, 0, 0.4)

		&--visible
			height: calc(100% - 48px)
			overflow: auto

			> .ljit-dropdown-menu-bar__dropdown-content
				transform: scaleY(1)

		&-content
			background: #fff
			transform: scaleY(0)
			transform-origin: top
			transition: 0.15s
