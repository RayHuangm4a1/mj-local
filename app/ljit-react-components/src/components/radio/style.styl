.ljit-radio--check
	&.ant-radio-button-wrapper
		color: rgb(97, 96, 99)
		&:hover
			color: rgb(97, 96, 99)

	&.ant-radio-button-wrapper-checked 
		color: rgb(97, 96, 99)
		border: 1px solid rgb(255,104,19)
		position: relative
		box-shadow: none
		&:focus-within
			outline: none
		&::before
			display: none
		&::after
			content: ''
			display: inline-block
			width: 0
			height: 0
			border-style: solid
			border-width: 0 0 14px 14px
			border-color: transparent transparent rgb(255,104,19) transparent
			position: absolute
			right: 0
			bottom: 0

		.ant-radio-button-inner
			position: absolute
			right: 7px
			bottom: 4px
			&::after,
			&::before
				content: ''
				height: 1px
				background-color: #fff
				display: inline-block
				position: absolute
				z-index: 1

			&::after 
				width: 7px
				transform: rotate(-40deg)

			&::before 
				width: 3px
				transform: rotate(-140deg)
				top: 1px
				right: -2px


.ljit-radio--radio-s
	&.ant-radio-wrapper
		display: inline-flex
		align-items: center
		.ant-radio-inner
			width: 8px
			height: 8px
			&:after
				width: 4px
				height: 4px
				top: 1px
				left: 1px
	&.ant-radio-wrapper-checked
		.ant-radio-inner
			border-color: rgb(255, 129, 19)

			&:after
				background-color: rgb(255, 129, 19)
				width: 4px
				height: 4px
				top: 1px
				left: 1px
	.ant-radio-input:focus + .ant-radio-inner,
	.ant-radio-wrapper:hover .ant-radio,
	.ant-radio:hover .ant-radio-inner
		border-color: rgb(255, 129, 19)
	.ant-radio-input:focus+.ant-radio-inner
		box-shadow: 0 0 0 3px rgba(255, 129, 19,.08)
