.ljit-round-ball
	background-color #fff
	width 900px
	min-height 304px
	box-sizing border-box
	padding 40px
	display flex
	align-items baseline
	&__title
		min-width 50px
		margin-right 20px
		> span
			display flex
			font-size 12px
			color #ff8113
	&__balls
		box-sizing border-box
		.ljit-bet-rectangle
			display inline-block
			width auto
			margin 10px 8px 10px 0
			&__badge
				> .ant-badge-count
					background #fff
					color #646464
					box-shadow: 0 0 0 0.75px #a09d9d
					position absolute
					right 15px
					top -3px
			&__badge-active
				> .ant-badge-count
					color #ff4700
					box-shadow: 0 0 0 0.75px #ff4700
			 .ljit-code-ball-button--rectangle
				> .ljit-code-ball--rectangle
					.ljit-tag
						height: 40px
