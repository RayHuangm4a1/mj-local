$xinYong-playslot-color = #ff5c00
$xinYong-playSlot-background-color = #fff
$xinYong-playSlot-border-color = #e9e9e9
$xinYong-playSlot-selected-background-color = #fff3ca

$xinYong-playSlot-input-color = #646464
$xinYong-playSlot-input-background-color = #fff
$xinYong-playSlot-input-border-color = #d2d2d2

$xinYong-playSlot-disabled-input-color = #c0c0c0
$xinYong-playSlot-disabled-input-background-color = #f2f2f2
$xinYong-playSlot-disabled-input-border-color = #cdcdcd

.ljit-xin-yong-play-slot-line
	display: flex
	flex: 1
	align-items: center
	justify-content: space-between
	padding: 5px 8px
	height: 32px
	background-color: $xinYong-playSlot-background-color
	border: 1px solid $xinYong-playSlot-border-color
	font-size: 14px
	color: $xinYong-playslot-color
	&:hover
		cursor: pointer
	&--checked
		background-color: $xinYong-playSlot-selected-background-color

	&__ball
		width: 30%
		text-align: center

	&__odds
		text-align: center
		margin: auto
		letter-spacing: -1px
		> div
			white-space: nowrap
			text-overflow: ellipsis
			overflow: hidden
			width: 100%

	&__status
		width: 53px

	&__input
		text-align: center

	&__overlay
		.ant-tooltip-inner
			padding: 8px
			color: $xinYong-playslot-color

	&--disabled
		&:hover
			cursor: default
		.ljit-code-ball
			pointer-events: none
			> div:hover
				cursor: default

	input
		border-radius: 4px
		border: 1px solid $xinYong-playSlot-input-border-color
		background-color: $xinYong-playSlot-input-background-color
		color: $xinYong-playSlot-input-color
		height: 20px
		padding: 0 3px
		line-height: 1

		&[disabled]
			background-color: $xinYong-playSlot-disabled-input-background-color
			border-color: $xinYong-playSlot-disabled-input-border-color
			color: $xinYong-playSlot-disabled-input-color
