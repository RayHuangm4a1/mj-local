$xinYong-playSlot-color = rgb(79, 79, 79)
$xinYong-playSlot-background-color = #fff
$xinYong-playSlot-border-color = rgb(208, 208, 208)
$xinYong-playSlot-selected-color = #fff
$xinYong-playSlot-selected-background-color = rgb(255, 243, 202)

$xinYong-playSlot-odds-color = rgb(250, 50, 49)

$xinYong-playSlot-disabled-input-background-color = #f2f2f2
$xinYong-playSlot-disabled-input-border-color = #cdcdcd

.ljit-xin-yong-play-slot-square
	display: flex
	align-items: center
	justify-content: center
	flex-direction: column
	background-color: $xinYong-playSlot-background-color
	border: 1px solid $xinYong-playSlot-border-color
	border-radius: 8px
	font-size: 12px
	padding: 5px
	height: 100%
	width: 100%
	cursor: pointer
	white-space: nowrap

	&--selected
		background-color: $xinYong-playSlot-selected-background-color

	&__ball
		color: $xinYong-playSlot-color

	&__odds
		color: $xinYong-playSlot-odds-color

		.ljit-decimal-number
			white-space: nowrap
			text-overflow: ellipsis
			overflow: hidden
			width: 100%
			font-size: 12px

	&--disabled
		color: $xinYong-playSlot-disabled-input-color
		background: $xinYong-playSlot-disabled-input-background-color
