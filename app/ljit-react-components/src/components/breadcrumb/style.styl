$link-color = rgba(0,0,0,.45)
$link-active-color = #1890ff
$link-inactive-color = rgba(0,0,0,.65)

.ljit-breadcrumb
	display: inline-block
	font-size: 14px

	&__item,
	&__separator
		color: $link-color

	&__separator
		margin-left: 8px
		margin-right: 8px

	&__item
		&--active
			transition: color .3s;
			&:link,
			&:visited,
			&:active
				color: $link-color

			&:hover
				color: $link-active-color

		&--inactive
			transition: none
			color: $link-inactive-color
			&:link,
			&:visited,
			&:active,
			&:hover
				color: $link-inactive-color
