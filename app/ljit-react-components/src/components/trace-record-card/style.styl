$button-color = #5ca9f8
$border-color = #e9e9e9

.ljit-trace-info-card
	cursor: pointer

	&__info
		border: none

	&:hover > &__info
		background-color: #f3f3f3

	& + &
		border-top: 1px solid $border-color

	&:last-child
		border-bottom: 1px solid $border-color

	&__header
		width: 100%
		&::after
			content: ""
			display: block
			clear: both

		.ljit-status-tag
			float: right

	&__title
		color: #222222
		font-size: 14px

	&__cancel
		padding: 0 6px
		border: 1px solid $button-color
		margin-left: 4px
		color: $button-color
		border-radius: 4px
		transform: translateY(-1px)

	.header-button-bar__item
		width: 100%
	.ljit-label-text__label
		white-space: nowrap
	.ljit-label-text__text
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
