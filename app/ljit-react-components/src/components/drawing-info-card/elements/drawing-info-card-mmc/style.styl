$card-background-color = #eeeeee

setCycle(diameter)
	width: diameter
	height: diameter
	border-radius: diameter

setEquilateralTriangle(triangleHeight, triangleColor)
	height: 0px
	width: 0px
	border-color: transparent transparent transparent triangleColor
	border-style: solid
	border-width: triangleHeight

resetButton()
	padding: 0
	border: none
	outline: none

.drawing-info-card-mmc
	display: flex
	max-width 285px
	min-height: 46px
	border-radius: 4px
	padding-left: 13px
	padding-right: 24px
	align-items: center
	justify-content: space-between
	background-color: $card-background-color

	&__ball
		position: relative

		> .ljit-tag
			border: none
			color:  #fff
			background-image: $gradient-orange-background-image = linear-gradient(to bottom, #ff5818, #ff9b3a 53%, #ff5818)

		// triangle
		&:before,
		&:after
			content: ''
			display: block
			position: absolute
			top: 50%
			z-index: 10
			setEquilateralTriangle(2px, $card-background-color)
		&:before
			left: 0
			transform: translateY(-50%)
		&:after
			right: 0
			transform: translateY(-50%) rotate(180deg)

		& + &
			margin-left: 6px

	&__bet-wrapper
		position: relative
		setCycle(40px)
		background-image: linear-gradient(to bottom, #d5d5d5, #e4e4e4);
	&__bet
		resetButton()
		setCycle(36px)
		position: absolute
		left: 0
		right: 0
		top: 0
		bottom: 0
		margin: auto
		font-size: 12px
		font-weight: 500
		text-align: center
		cursor: pointer
		color: #ffffff
		box-shadow: 0 2px 5px rgba(0,0,0,.1), inset 0 -1px rgba(126,126,126,.5)
		background-image: linear-gradient(to bottom, #ffb72b, #ff8113)

		&:active
			transform: translateY(0.5px)
			box-shadow: 0 2px 5px rgba(0,0,0,.1), inset 0 1px rgba(126,126,126,.5)
			background-image: linear-gradient(to bottom, #ff8113, #ffb72b)

		&:disabled
			cursor: not-allowed
			box-shadow: inset 0 -1px rgba(175,175,175,.5)
			background-image: linear-gradient(to bottom, #e2e2e2, #cdcdcd)
