$label-text-color = #9f9f9f

$sub-title-icon-color = #ff9022
$sub-title-text-color = rgba(0, 0, 0, 0.4)

$table-thead-color = #eeeded
$table-tbody-color = #ffffff

select-style(width)
	.ljit-form-select
		width: width
		margin-left: 8px
		margin-bottom: 0px
		.ant-select-selection--single
			height: 28px
			.ant-select-selection__rendered
				line-height: 28px

.ljit-dividend-management
	padding: 20px 12px 24px 12px

	&__title-bar
		display: flex
		align-items: center
		margin-bottom: 19px
		position: relative
		button
			padding: 0
			height: 28px
			width: 80px
		.ljit-button--solid
			width: 68px

	&__dividend-cycle
		margin-right: 15px
		select-style(262px)

	&__member-name
		margin-right: 15px
		.ljit-input
			width:104px
			height: 28px
			margin-left: 8px
			margin-bottom: 0px
			input
				height: 28px

	&__release-status
		margin-right: 15px
		select-style(104px)

	&__title-button-group
		position: absolute
		right: 0
		button:last-child
			margin-left: 8px

.ljit-distrbution-dividend-modal
	.ant-modal
		&-header
			padding: 12px
		&-title
			font-size: 18px
			font-weight: 600
	&__content
		padding: 24px 68px
		.ljit-label-text
			margin-bottom: 20px
			&__label
				color: $label-text-color
				font-weight: 500
		.ant-form-item
			margin-bottom: 20px
			&-label
				line-height: 20px
				> label
					color: $label-text-color
					font-weight: 500
		.ljit-form-select
			width: 100%
		.ant-input-number
			width: 100%
			&-handler-wrap
				display: none

.ljit-dividend-editing-modal,
.ljit-dividend-template-editing-modal
	.ant-modal
		&-header
			padding: 12px 64px 12px 12px
	&__title
		display: flex
		justify-content: space-between
		font-size: 18px
		font-weight: 600
		span
			color: $sub-title-text-color
			font-size: 12px
		svg
			fill: $sub-title-icon-color

.ljit-dividend-template-editing-modal
	&__content
		padding: 39px 64px 30px
		.ant-table
			.ant-table-thead
				> tr
					>th
						background-color: $table-thead-color
			.ant-table-tbody
				>tr
					>td
						background-color: $table-tbody-color
						padding: 12px
		.ljit-label-text
			width: 30%
			margin-left: 12px
			margin-bottom: 16px
		.ant-input-number
			width: 88px
			&-handler-wrap
				display: none
	.ljit-dividend-table-form
		.ljit-input-dynamic-table
			max-height: 340px
			overflow: scroll

.ljit-dividend-editing-modal
	.ant-modal-close-x
		display: none
	&__footer
		button
			width: 80px

	&__content
		padding: 21px 64px 13px
		.ant-table
			.ant-table-thead
				> tr
					>th
						background-color: $table-thead-color
			.ant-table-tbody
				>tr
					>td
						background-color: $table-tbody-color
						padding: 12px
		.ljit-label-text
			width: 30%
			margin-left: 12px
			margin-bottom: 16px
		.ant-input-number
			width: 88px
			&-handler-wrap
				display: none
	.ljit-dividend-table-form
		.ljit-input-dynamic-table
			max-height: 340px
			overflow: scroll

.ljit-my-dividend-modal
	.ant-modal
		&-header
			padding: 12px
		&-title
			font-size: 18px
			font-weight: 600
		&-footer
			button
				&:last-child
					display: none
	&__content
		padding: 40px 64px
		.ant-table-content
			border-bottom: 1px solid #e8e8e8;

		.ljit-table
			.ant-table-thead
				>tr
					>th
						background-color: $table-thead-color
		.ant-table-small > .ant-table-content > .ant-table-body > table
			>.ant-table-thead
				> tr
					> th
						padding: 16px
			>.ant-table-tbody
				> tr
					> td
						padding: 18px
