.agent-team-third-party-report
	padding: 20px 12px 24px 12px

	&__header
		.ljit-form
			display: flex
			align-items: center

			.ljit-btn
				width: 68px
				font-size: 16px
				font-weight: 600

		.ant-form-item-control,
		.ant-form-item-label,
		.ant-input,
		.ant-select-selection,
		.ant-select-selection__rendered,
		.ant-calendar-range-picker-input,
		.ant-btn
			line-height: 28px
			height: 28px
			padding-top: 0
			padding-bottom: 0

		.ljit-form-label
			display: flex
			margin-right: 15px
			margin-bottom: 0px

			.ljit-input
				width: 104px

			.ljit-form-select
				width: 116px

	&__body
		> .ljit-label
			display: flex
			align-items: center
			margin-bottom: 0
			.ant-form-item-label
				> label
					color: #646464
					opacity: 0.5

		.ant-table-body
			.ljit-text-button
				color: #ff8113

		.ljit-user-breadcrumb
			margin-left: 6px

			&__crumb
				color: #ff8113
				&--active
					cursor: pointer
					&:hover,
					&:active
						color: #ff8113
				&--omit
					color: #646464

			&__separator
				color: #646464
				margin-left: 8px
				margin-right: 8px
				opacity: 0.5
