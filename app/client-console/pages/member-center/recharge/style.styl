.recharge,
.recharge-confirm,
.recharge-apply-result
	padding: 22px 72px 25px
	.ant-form-item-control-wrapper
		display: inline-block
		vertical-align: middle
		margin-left: 22px
	button
		width: 110px
		font-size: 16px
		font-weight: 600
		padding: 0

	.ljit-divider
		margin: 15px 0

	&__highlight
		color: #ff8113

.recharge
	.ljit-form-label
		display: flex
	.ant-form-item-label
		width: 67px
	.ant-form-item-control
		width: 800px

	&__user-info
		display: flex
		justify-content: space-between
		align-items: center

		> div
			.ljit-btn
				margin-left: 15px

	&__warm-hint
		display: flex
		margin: 0

		.ant-form-item-label
			line-height: normal

		.ant-form-item-children
			width: 566px
			line-height: normal

	&__recharge-form
		.ljit-form-label
			margin-bottom: 5px

		.ljit-radio-group__option--radio+.ljit-radio-group__option--radio
			margin-left: 0

		&-notice
			display: flex
			margin: 0

			.ant-form-item-label
				line-height: normal

			.ant-form-item-children
				line-height: normal

		.recharge-button
			display: block
			margin: 13px auto

		label[for="value"]::before
			display: none

.recharge-confirm
	.ljit-form-label
		display: flex
	.ant-form-item-label
		width: 100px
		text-align: left
		label::before
			display: none
	.ant-form-extra
		position: absolute
		top: -4px
		left: 114px
		color: #646464
	.ant-form-item-control-wrapper
		width: 100%
		margin-left: 14px

	&__input
		width: 104px
		color: #222;
	&__title
		font-size: 18px
		font-weight: 600
		color: #222
		padding-bottom: 28px
		margin-bottom: 12px
		border-bottom: 1px solid #e6e2e2
	&__buttons
		display: flex
		justify-content: center
		margin-top: 48px;

		button
			&:first-child
				margin-right: 17px

	&__warm-hint
		display: flex
		margin: 0

		.ant-form-item-label
			line-height: normal

		.ant-form-item-children
			width: 566px
			line-height: normal

.recharge-apply-result
	&__title-block
		display: flex
		align-items: center

		> div:first-child
			font-size: 18px
			font-weight: 600
			color: #222
			margin-right: 20px

		.ant-statistic-title
			font-size: 14px
			color: #8c8c8c

		.ant-statistic-content-value
			font-size: 24px
			color: #262626

	button
		display: block
		margin: 40px auto 0

	.ljit-label
		display: flex
		margin-bottom: 10px

		.ant-form-item-label
			line-height: normal
			width: 80px
			text-align: left

		.ant-form-item-control-wrapper
			margin-left: 10px

		.ant-form-item-children
			line-height: normal
