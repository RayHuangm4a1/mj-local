.member-report
	padding: 20px 12px 24px 12px

	&__header
		display: flex
		margin-bottom: 20px

		.ljit-form
			display: flex
			align-items: center

			.ljit-btn
				width: 68px
				font-size: 16px
				font-weight: 600

		.ljit-form-label
			margin-bottom: 0
			margin-right: 15px
			display: flex

		.ant-form-item-control,
			.ant-form-item-label,
			.ljit-form-select,
			.ant-input,
			.ant-btn,
			.ant-select-selection--single,
			.ant-select-selection__rendered
				line-height: 28px
				height: 28px
				padding-top: 0
				padding-bottom: 0

	&__select-dropdown
		.ant-select-selection__rendered
			width: 80px

	&__text--profit
		color: #129c58
	&__text--deficit
		color: #ff3f00
