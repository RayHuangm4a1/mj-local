.betting-record-card
	margin-bottom: 10px
	display: flex
	flex-direction: column
	background: #fff

	&__header
		display: flex
		justify-content: space-between
		align-items: center
		padding: 12px
		height: 84px
		border-bottom: 1px solid rgb(240, 240, 240)
		text-align: center

		.ljit-lottery-icon
			width: 54px
			height: 54px

			>img
				width: 54px
				height: 54px

		> div
			color: rgb(74, 74, 74)
			font-size: 16px
			font-weight: bold

	&__body
		display: flex
		height: 100px
		border-bottom: 1px solid rgb(240, 240, 240)

		> div
			padding: 12px 14px
			width: 50%

			.ljit-label-text__label
				width: auto
				white-space: nowrap

			&:first-child
				border-right: 1px solid rgb(240, 240, 240)

	&__action
		padding: 12px 0
		height: 62px
		display: flex
		align-items: center

		&-item
			border-right: 1px solid rgb(240, 240, 240)
			display: flex
			align-items: center
			height: 40px
			padding: 0 22px

			> div
				background: rgb(255, 129, 19)
				border-radius: 50%
				height: 16px
				width: 16px
				position: relative
				margin-right: 5px

				&::before
					content: ''
					width: 8px
					height: 2px
					background: #fff
					position: absolute
					top: 7px
					left: 4px
