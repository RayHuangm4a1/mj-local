.bank-item
	display: flex
	align-items: center
	background: #fff
	height: 82px
	padding: 10px 16px
	border-bottom: 1px solid rgb(240, 240, 240)

	.ljit-info-card
		padding: 0
		border: none
		margin-left: 22px
		white-space: nowrap

		.header-button-bar__item
			.ljit-label-text
				font-size: 16px

				> .ljit-label-text__label
					margin-right: 12px

		.ljit-label-text
			font-size: 12px

			> .ljit-label-text__label
				width: auto
				margin: 0
				color: rgb(74, 74, 74)
				font-weight: normal

			> .ljit-label-text__text
				color: rgb(74, 74, 74)
				font-weight: normal

		.ljit-row
			display: flex

			> div
				width: auto
				max-width: 100px

	> .ljit-btn
		margin-left: auto
		height: 24px
		padding: 2px 13px

