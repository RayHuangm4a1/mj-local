.mobile-shopping-cart
	width: 100%

	> p
		padding: 10px 12px 6px
		background: #fff
		margin: 1px 0px

	&__button-group
		display: flex
		margin-bottom: 8px
		> div
			font-size: 14px
			display: flex
			align-items: center
			justify-content: center
			width: 50%
			background-color: #fff
			padding: 10px 0px
			&:first-child
				border-right: 1px solid rgb(240, 240, 240)
			> i
				margin-right: 8px
				svg
					fill: rgb(74, 74, 74)
	&__bet-list
		height: calc(100vh - 215px) 
		overflow: scroll
		scroll-snap-type: both mandatory
	&__bet
		background-color: #fff
		margin-bottom: 1px
		padding: 6px 16px
		box-sizing: border-box
		display: flex
		align-items: center
		justify-content: space-between
		scroll-snap-align: end
		> div
			> p
				margin: 0
				font-size: 12px
				&:first-child
					color: red
					font-size: 16px
		i
			transform: rotate(45deg)
			svg
				fill: rgb(155, 155, 155)

	&__trace-button
		width: 60px
		height: 60px
		border-radius: 50%
		color: #fff
		background-color rgb(74, 144, 226)
		position: fixed
		right: 5px
		bottom: 150px
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		font-size: 12px
		img
			width: 18px
			height: auto
			margin-bottom: 2px

	.ljit-mobile-betting-checkout
		position: fixed
		bottom: 0
		.ljit-mobile-betting-checkout__betting-text
			background-color: #fff
