.ljit-third-party-game-card
	width: 100%
	display: inline-block
	border-radius: 4px

	&__image-container
		width: 100%
		height: 102px
		position: relative
		cursor: pointer

		img
			width: 100%
			height: 100%
			border-radius: 4px
	&__tag
		position: absolute
		top: 0
		left: 0
		font-size: 12px
		color: #ffffff
		border-radius: 4px 0 4px 0
		background-color: rgba(72, 72, 71, 0.85)
		padding: 1px 9px 
	&__title
		display: flex
		padding: 4px 6px
		justify-content: space-between
		align-items: center
		background-color: #f4f5f8
		border-bottom-left-radius: 6px
		border-bottom-right-radius: 6px

		p
			margin-bottom: 0
			font-size: 12px
			color: #646464
		.anticon-heart-outline
			svg
				fill: #b3b3b3
