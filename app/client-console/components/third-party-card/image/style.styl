.ljit-third-party-lobby-card
	width: 350px
	&__header
		margin-bottom: 13px
		display: flex
		align-items: center
		span
			margin-left: 10px
			font-size: 16px
			font-weight: 500
			color: #6f6f6f

	&__image-container
		width: 100%
		height: 200px
		border-radius: 6px
		position: relative
		cursor: pointer
		img
			width: 100%
			height: 100%
			border-radius: 6px

		&--hover
			display: none
			height: 100%
			width: 100%
			border-radius: 6px
			padding: 25px 50px
			background-color: rgba(72, 72, 71, 0.85)
			position: absolute
			top: 0
			left: 0
			grid-template-columns: repeat(2, 1fr)
			grid-column-gap: 10px
			grid-row-gap: 16px
		&:hover
			.ljit-third-party-lobby-card__image-container--hover
				display: grid
		
	&__third-party-game-button.ljit-btn
		width: 120px
		height: 40px
		border-radius: 20px
		border-color: #ffffff
		span
			color: #fff
		&:nth-child(n+7)
			display: none

	.ljit-button--hollow.ljit-btn
		&:hover,
		&:focus
			background-color: rgba(255, 255, 255, 0.2)
