.ljit-mobile-betting-checkout
	width: 100%
	border-top: 1px solid rgb(240, 240, 240)
	&__betting-text
		font-size: 12px
		padding: 6px 12px
		color: rgb(138,138,143)
		span
			color: rgb(255,104,19)
	&__content
		display: flex
	&__betting-button
		flex: 1
		width: 100%
		height: auto
		line-height: 1
		padding: 6px 0
		border-radius: 0
		p
			font-size: 16px
			margin-bottom: 0
		span
			font-size: 10px
	&__betting-input,
	&__shopping-cart-bar
		display: flex
		width: 50%
		font-size: 12px
	&__betting-input
		padding: 6px 13px 6px 10px
		color: #fff
		background-color: rgb(74, 74, 74)
		> div:first-child
			width: 26px
		.ljit-input-number
			flex: 1
			margin-left: 8px
			width: 100%
			height: 100%
			.ant-input-number-handler-wrap
				display: none
			.ant-input-number-input-wrap
				height: 100%
				input
					text-align: right
					height: 100%
	&__shopping-cart-bar
		color: rgb(74, 74, 74)
		justify-content: space-between
		padding: 3px 0
		> div
			width: 50%
			text-align: center
			&:last-child
				position: relative
				&:before
					content: ''
					display: inline-block
					position: absolute
					width: 1px
					height: 24px
					background-color: rgb(191, 191, 191)
					top: 7px
					left: 0
			> div
				position: relative
	&__shopping-cart-badge
		position: absolute
		right: 18px
		>.ant-badge-count
			background-color: rgb(255,104,19)
