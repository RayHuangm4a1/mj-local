$tab-border-color = #e9e9e9

.betting-record-tab
	width: 253px

	&__selected-betting-tab-panel
		.tab-panel
			&__content
				max-height: 298px
			&__footer
				text-align: left
				height: 162px
				color: #5ca9f8
				font-size: 12px
				font-weight: 500

	.ljit-badge
		.ant-badge-count
			box-shadow: none

	.ljit-tabs__tabpane
		.ljit-xin-yong-betting-checkout
			margin-bottom: 0

	.ant-tabs-bar
		height: 32px

		> .ant-tabs-nav-container
			> .ant-tabs-nav-wrap
				> .ant-tabs-nav-scroll
					> .ant-tabs-nav
						> div
							> .ant-tabs-tab
								height: 32px
								line-height: 30px
