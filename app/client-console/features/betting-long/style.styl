$primary-color = #ff8113;
$grey9 = #e4e4e4;

normal-font()
	font-weight: normal
	font-style: normal
	font-stretch: normal
	letter-spacing: normal

.betting-long
	&__container
		background: #ffffff
		border-radius: 4px
		padding: 0px

	&__play-explanation-row
		padding: 20px 32px 16px 20px

	&__play-explanation-icon
		display: flex
		height: 20px
		width: 20px
		border-radius: 100%
		justify-content: center
		text-align: center
		align-items: center
		color: #ffffff
		background-color: #ff9022

	&__play-explanation
		display: flex
		justify-content: center
		align-items: center

		> i
			padding-right: 8px
			> svg
				color: $primary-color

		span
			margin-left: 6px
			font-size: 14px
			line-height: normal
			normal-font()
			color: #222222

	&__play-example-tooltip
		padding: 2px 12px
		height: 24px
		line-height: 20px
		font-size: 12px
		normal-font()
		background-color: $grey9
		color: #646464
		vertical-align: middle

	&__tooltip-overlay
		width: 100%
		max-width: 208px
		height: 87.3px
		.ant-tooltip-content
			position: relative
		.ant-tooltip-arrow
			border-bottom-color: #ffffff
			position: absolute
			top: -4px
			&::after
				content: ""
				border-style: solid
				border-width: 0 7px 7px
				border-color: transparent transparent #e0e0e0 transparent
				z-index: -1
				position: absolute
				top: -1px
				left: -7px
		.ant-tooltip-inner
			padding: 12px 14px 12px 14px
			border-radius: 8px
			border-radius: 2px
			box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.42)
			border: 1px solid #e0e0e0
			background-color: #ffffff
			color: #646464
			font-size: 12px
			font-weight: 500
			font-style: normal
			font-stretch: normal
			line-height: normal
			letter-spacing: normal

	&__tag
		border-radius: 4px

	&__filter-selection-row
		padding-left: 18px
		background-color: #fbfbfb
		border-bottom: 1px solid #e3e3e3

		.ljit-tag
			width: 72px
			height: 24px
			margin: 14px 0px

	&__lottery-filter
		margin-bottom: 13px

		.ant-checkbox-wrapper-checked
			.ant-checkbox-checked
				.ant-checkbox-inner
					background-color: $primary-color
					border-color: $primary-color

	&__lists
		&--wrapper
			height: 458px
			padding: 16px 22px 16px 16px
			overflow-y: scroll

			.betting-long__item
				margin 10px 0px

	&__betting-checkout
		justify-content: left
		padding: 12px 24px
		width: 100%
		border: 0px
		border-top: 1px solid #e3e3e3

		.betting-long-checkout__input
			.ljit-input-number
				width: 89px
				margin-left: 12px

		.betting-long-checkout__chip
			margin-left: 28px

		.betting-long-checkout__balance
			min-width: min-content
			width: fit-content
			justify-content: left
			margin-left: 42px

			div:last-child
				display: none

		.betting-long-checkout__button
			margin-left: auto
