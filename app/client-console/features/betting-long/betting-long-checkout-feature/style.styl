.betting-long-checkout
	width: 900px
	box-sizing: border-box
	background-color: #fff
	border: solid 1px #e9e9e9
	padding: 12px 24px
	display: inline-flex
	align-items: center
	justify-content: space-between

	&__input
		display: flex
		align-items: center
		.ljit-input-number
			width: 110px
			margin-left: 16px
			text-align: center

	&__chip
		width: 210px
		display: flex
		align-items: center
		justify-content: space-between

	&__balance
		color: #1b1b1b
		min-width: 225px
		display: flex
		justify-content: space-around

	&__button
		button
			margin-left: 8px
			width: 84px
			text-align: center

	&__reset__button,
	&__submit__button
		border-color: #fc9327
		font-weight: 600
		line-height: 20px
		font-size: 16px
		&:focus
			border-color: #fc9327
		&:hover
			border-color: #fc9327

	.ant-input-number-handler-wrap
		display: none;
