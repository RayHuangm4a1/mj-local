$item-height = 32px
$border-color = #e8e8e8

.betting-basket
	&__clear-basket-button
		margin-right: 8px
		font-size: 12px
		color: #5fa7f8

	&__card
		border: 0px
		border-bottom: 1px solid $border-color
		&--default
			.standard-selected-betting-card__close
				display: none

	&__tab-panel
		.ljit-panel
			&__content
				max-height: 422px

			&__footer
				text-align: left
				height: 120px
