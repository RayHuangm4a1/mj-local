.ljit-right-sidebar
	position: fixed
	right: 0
	bottom: calc(50% - 248.5px)
	font-size: 12px
	z-index: 1000
	border-radius: 4px 0px 0px 4px

	& .ljit-icon-selector
		padding-bottom: 7.5px
		border-radius: 4px 0px 0px 0px

	& .ljit-icon-selector
		padding-top: 10px

	& .ljit-icon-selector__item
		padding 7.5px 0px

	&__selector
		border-radius: 4px 0px 0px 4px
		border-top: 1px solid #e6e2e2
		border-left: 1px solid #e6e2e2
		border-bottom: 1px solid #e6e2e2

		& .ljit-member-center-selector
			padding-bottom: 10px

	&__selector--hidden
		display: none

	&__show-trigger
		position: relative
		right: 0px
		top: -221px
		background-color: #ffffff
		padding 10px 0px 10px 24px
		width: 24px
		height: 55px
		border-radius: 4px 0px 0px 4px
		border-top: 1px solid #e6e2e2
		border-left: 1px solid #e6e2e2
		border-bottom: 1px solid #e6e2e2

		&--hidden
			display: none

		> div
			position: relative
			top: 13px
			right: 14px
			width: 0
			height: 0
			border-style: solid
			border-width: 5px 5px 5px 0
			border-color: transparent #afafaf transparent transparent

	&__hidden-trigger
		background-color: #ffffff
		color: #afafaf
		width: 56px
		text-align: center
		padding: 9px 0px
		border-top: 1px solid #e6e2e2
		cursor: pointer
		border-radius: 0px 0px 0px 4px
