.member-center-modal-side-menu
	.ljit-layout
		min-height: 100%
	& .ljit-label-selector
		display block
	& .ljit-label-selector__item
		width 100%
		margin 0 0
	& .member-center-modal-sub-menu
		& .ljit-label-selector__item--active
			background-color #ff8113
			& .ant-tag
				color white
		& .ant-layout-sider
			background #eeeded
	& .ljit-label-selector__item--active
		& .ant-tag
			color #ff8113
	& .ant-layout-sider
		background #FFFFFF
	&__menu
		padding-top 10px
		border-right solid 1px #e6e2e2

	& .member-center-modal-sub-menu
		.ljit-label-selector
			width 120px

		& .ljit-icon-selector__item
			width 120px
			padding 9px 0px 9px 13px
			cursor pointer

			> div
				margin 0px 3px

			&--active
			&:hover
				color #ffffff
				background-color #fc9327

		& .sub-menu-title
			padding 9px 16px
			font-weight 500
			color #646464
			text-align center
			font-size 14px
